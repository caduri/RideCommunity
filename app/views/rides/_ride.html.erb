<li>
  <%= link_to ride.user.name, ride.user %>
  
  <span class="content"><%= wrap(ride.user_address) %> to <%= wrap(ride.addressto) %> at <%= wrap(ride.scheduledfor.strftime("%d/%m/%Y %H:%M")) %> (<%= ride.calculate_distance %> km) </span>
  <span class="comment">
  	<%= wrap(ride.comment) %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(ride.created_at) %> ago.
  </span>
  <% if current_user?(ride.user) %>
  	| <%= link_to "edit", edit_ride_path(ride) %> | <%= link_to "delete", ride, method: :delete,
                              data: { confirm: "You sure?" } %>
  <% else %>
  	<%= render 'rides/join_ride_form', ride: ride if signed_in? %>
  <% end %>
  
</li>